<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivPdfSymbol"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_pdf_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPdfName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="File Name"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivPdfSymbol"
        app:layout_constraintStart_toEndOf="@+id/ivPdfSymbol"
        app:layout_constraintTop_toTopOf="@+id/ivPdfSymbol" />

</androidx.constraintlayout.widget.ConstraintLayout>